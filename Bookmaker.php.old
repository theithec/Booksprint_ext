<?php

if ( function_exists( 'wfLoadExtension' ) ) {
	wfLoadExtension( 'Bookmaker' );
	// Keep i18n globals so mergeMessageFileList.php doesn't break
	$wgMessagesDirs['Bookmaker'] = __DIR__ . '/i18n';
	$wgExtensionMessagesFiles['BookmakerAlias'] = __DIR__ . '/Bookmaker.i18n.alias.php';
	wfWarn(
		'Deprecated PHP entry point used for Bookmaker extension. Please use wfLoadExtension ' .
		'instead, see https://www.mediawiki.org/wiki/Extension_registration for more details.'
	);
	return true;
} else {
	die( 'This version of the Bookmaker extension requires MediaWiki 1.25+' );
}
